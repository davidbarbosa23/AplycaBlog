<!DOCTYPE html>
<html lang="es" class="h-100">
  <head>
    {# Required meta tags #}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" href="{{ asset('assets/img/favicon.jpg') }}" type="image/jpeg">

    {% block stylesheets %}
        {# Bootstrap CSS #}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap-4.5.2/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    {% endblock %}

    <title>{% block title %}Aplyca{% endblock %}</title>
  </head>
  <body class="d-flex flex-column h-100">
    {% block header %}
        <header class="">
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <div class="container p-0">
                    <a class="navbar-brand" href="{{ path('home') }}">Aplyca</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item {{ app.request.get('_route') == 'home' ? 'active' : '' }}">
                                <a class="nav-link" href="{{ path('home') }}">Home</a>
                            </li>
                            <li class="nav-item {{ app.request.get('_route') == 'blog' or app.request.get('_route') == 'single' ? 'active' : '' }}">
                                <a class="nav-link" href="{{ path('blog') }}">Blog</a>
                            </li>
                            <li class="nav-item {{ app.request.get('_route') == 'contact' ? 'active' : '' }}">
                                <a class="nav-link" href="{{ path('contact') }}">Contacto</a>
                            </li>
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-secondary" href="{{ path('app_logout') }}">Cerrar Sesión</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-secondary" href="{{ path('app_login') }}">Iniciar Sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary ml-2" href="{{ path('register') }}">Registro</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    
    <main role="main" class="flex-shrink-0 pt-5">
        {% block body %}{% endblock %}
    </main>

    {% block footer %}
        <footer class="footer mt-auto py-3 text-muted">
            <div class="container">
                <p class="float-right">
                    <a href="#">Back to top</a>
                </p>
                <p>Album example is &copy; Bootstrap, but please download and customize it for yourself!</p>
                <p>New to Bootstrap? <a href="https://getbootstrap.com/">Visit the homepage</a> or read our <a href="/docs/4.5/getting-started/introduction/">getting started guide</a>.</p>
            </div>
        </footer>
    {% endblock %}

    {% block javascripts %}
        {# Optional JavaScript #}
        {# jQuery first, then Popper.js, then Bootstrap JS #}
        <script type="text/javascript" src="{{ asset('assets/js/jquery-3.5.1.slim.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/js/popper-2.4.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/bootstrap-4.5.2/js/bootstrap.min.js') }}"></script>
    {% endblock %}

  </body>
</html>